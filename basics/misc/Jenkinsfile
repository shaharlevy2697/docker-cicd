node {
   def commit_id
   stage('step pre') {
     checkout scm
     sh "git rev-parse --short HEAD > .git/commit-id"                        
     commit_id = readFile('.git/commit-id').trim()
   }
   stage('test') {
     nodejs(nodeJSInstallationName: 'nodejs') {
       dir("basics"){
       sh 'npm install --only=dev'
       sh 'npm test'
       }
     }
   }
   stage('docker build/push') {
     docker.withRegistry('https://index.docker.io/v1/', 'shaydocker') {
       def app = docker.build("shayc12/docker-nodejs-demo:${commit_id}", '.').push()
     }
   }
   stage('docker run') {
      
      sh "docker run --rm -tid --name docker_test -p 3000 shayc12/docker-nodejs-demo:${commit_id}"
      sh 'docker kill docker_test'
      
     }
   }

